@{
    ViewData["Title"] = "Home Page";
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4">Bienvenido a Sistema Concesionaria</h1>
        <p class="lead">La solución integral para gestionar y optimizar tu inventario de vehículos.</p>
        <a asp-action="ListadoVehiculos" asp-controller="Vehiculos" class="btn btn-light btn-lg">Explorar Inventario</a>
    </div>

    <!-- Features Section -->
    <div class="row text-center mt-5">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <i class="fas fa-car fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Gestión de Vehículos</h5>
                    <p class="card-text">Controla modelos, colores y transmisiones de forma detallada.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Reportes Personalizados</h5>
                    <p class="card-text">Genera informes para analizar el rendimiento de tu inventario.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <i class="fas fa-cogs fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Interfaz Intuitiva</h5>
                    <p class="card-text">Fácil de usar para usuarios de cualquier nivel técnico.</p>
                </div>
            </div>
        </div>
    </div>

</div>



@section Scripts {
    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
