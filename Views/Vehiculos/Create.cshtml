@model Pr_Concesionaria.Models.Vehiculo

@{
    ViewData["Title"] = "Crear Vehículo";
}

<h1 class="text-center my-4">Registrar Nuevo Vehículo</h1>

<div class="card shadow-lg mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Información del Vehículo</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="mb-3" hidden>
                <label asp-for="IdVehiculo" class="form-label"></label>
                <input asp-for="IdVehiculo" class="form-control" />
                <span asp-validation-for="IdVehiculo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdModelo" class="form-label">Modelo</label>
                <select asp-for="IdModelo" asp-items="@ViewBag.modelos" class="form-select">
                    <option disabled selected>Seleccione modelo</option>
                </select>
                <span asp-validation-for="IdModelo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdTransmision" class="form-label">Transmisión</label>
                <select asp-for="IdTransmision" asp-items="@ViewBag.transmisions" class="form-select">
                    <option disabled selected>Seleccione transmisión</option>
                </select>
                <span asp-validation-for="IdTransmision" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdColor" class="form-label">Color</label>
                <select asp-for="IdColor" asp-items="@ViewBag.colors" class="form-select">
                    <option disabled selected>Seleccione color</option>
                </select>
                <span asp-validation-for="IdColor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Precio" class="form-label">Precio</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Precio" class="form-control" />
                </div>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Stock" class="form-label">Stock</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Registrar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="ListadoVehiculos" class="btn btn-secondary">Volver</a>
</div>
<br />
<br />
<br />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
