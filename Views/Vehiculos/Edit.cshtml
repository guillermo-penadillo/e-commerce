@model Pr_Concesionaria.Models.Vehiculo

@{
    ViewData["Title"] = "Edit";
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
}

<h1 class="page-title">Editar Vehículo</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h4>Detalles del Vehículo</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <div class="form-group" hidden>
                    <label asp-for="IdVehiculo" class="control-label"></label>
                    <input asp-for="IdVehiculo" class="form-control" />
                    <span asp-validation-for="IdVehiculo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdModelo" class="control-label">Modelo</label>
                    <select asp-for="IdModelo" asp-items="@ViewBag.modelos" class="form-control">
                    </select>
                    <span asp-validation-for="IdModelo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdTransmision" class="control-label">Transmisión</label>
                    <select asp-for="IdTransmision" asp-items="@ViewBag.transmisions" class="form-control">
                    </select>
                    <span asp-validation-for="IdTransmision" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdColor" class="control-label">Color</label>
                    <select asp-for="IdColor" asp-items="@ViewBag.colors" class="form-control">
                    </select>
                    <span asp-validation-for="IdColor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Precio" class="control-label">Precio</label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Stock" class="control-label">Stock</label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="ListadoVehiculos" class="btn btn-secondary">Volver</a>
    </div>
</div>

<br />
<br/>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
